<div class="container px-5 px-sm-0">
  <div class="row">
    <% if books.exists? %>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody id="book">
          <% books.each do |book| %>
          <tr>
            <td>
              <%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, format: 'jpeg', fallback: "no-image-icon.jpg" %>
            </td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
            <% if book.user == current_user %>
              <td><%= link_to "編集", edit_book_path(book) %></td>
              <td><%= link_to "削除", book_path(book), method: :delete, remote: true %></td>
            <% else %>
              <td></td>
              <td></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
     <p>一致する検索結果はありません</p>
    <% end %>
  </div>
</div>